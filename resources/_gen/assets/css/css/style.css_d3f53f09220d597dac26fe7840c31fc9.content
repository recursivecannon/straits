body{margin:0 auto;max-width:650px;line-height:1.6;font-size:18px;color:#444;padding:0 10px;font-family:times new roman}h1,h2,h3{line-height:1.2}div.header,div.footer{padding:12px 0;font-family:sans-serif;font-size:14px;font-weight:400}.header-menu,.footer-links{float:right}.header-menu a,.footer-links a{padding-left:10px}a{text-decoration:none}a:hover{text-decoration:underline}ul.pagination{list-style-type:none;text-align:center;padding:0}ul.pagination>li{padding:0 8px;display:inline-block}div#content{margin-top:30px;margin-bottom:50px}img{max-width:100%;max-height:100%;display:block;margin-left:auto;margin-right:auto}.custom-form{margin-bottom:10px}.custom-form input{width:100%;height:20px;padding:5px 0 5px 5px;border-radius:3px;border:1px solid #ccc}.custom-form textarea{font-family:sans-serif;width:100%;height:100px;padding:5px 0 5px 5px;border-radius:3px;border:1px solid #ccc;color:#444}.profile-image{border-radius:50%}.text-image{display:inline;position:relative;top:4px}.post-meta{font-family:sans-serif;font-size:14px;margin-bottom:.5rem}